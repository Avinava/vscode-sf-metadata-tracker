{
  "name": "sf-metadata-tracker",
  "displayName": "SF Metadata Tracker",
  "description": "Track and display sync status indicators for Salesforce metadata files in VS Code",
  "version": "1.3.0",
  "publisher": "avidev9",
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "clean": "rm -rf release/*.vsix",
    "prebuild": "yarn clean",
    "build": "npx @vscode/vsce package --out release/",
    "package": "yarn build",
    "release": "yarn build && echo 'Package ready in release/ folder'"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "salesforce",
    "sfdx",
    "sync",
    "status",
    "metadata"
  ],
  "activationEvents": [
    "workspaceContains:sfdx-project.json"
  ],
  "main": "./src/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Avinava/vscode-sf-metadata-tracker.git"
  },
  "icon": "assets/icon.png",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.13.0"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "SF Metadata Tracker",
      "properties": {
        "sfMetadataTracker.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show file sync status in the status bar"
        },
        "sfMetadataTracker.showFileDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Show sync status decorations on files in explorer"
        },
        "sfMetadataTracker.cacheTTL": {
          "type": "number",
          "default": 60,
          "description": "Cache time-to-live in seconds for file status"
        },
        "sfMetadataTracker.showScanSummary": {
          "type": "boolean",
          "default": true,
          "description": "Show a brief summary in status bar after scanning files"
        },
        "sfMetadataTracker.showCoverageStatus": {
          "type": "boolean",
          "default": true,
          "description": "Show code coverage percentage in status bar for Apex files"
        }
      }
    },
    "commands": [
      {
        "command": "sf-metadata-tracker.showFileOrgStatus",
        "title": "SF Metadata Tracker: Show File Org Status",
        "shortTitle": "File Org Status",
        "icon": "$(info)"
      },
      {
        "command": "sf-metadata-tracker.refreshFileStatus",
        "title": "SF Metadata Tracker: Refresh File Status",
        "shortTitle": "Refresh File Status",
        "icon": "$(refresh)"
      },
      {
        "command": "sf-metadata-tracker.refreshAllFileStatus",
        "title": "SF Metadata Tracker: Refresh All File Status",
        "shortTitle": "Refresh All Status",
        "icon": "$(refresh)"
      },
      {
        "command": "sf-metadata-tracker.deployCurrentFile",
        "title": "SF Metadata Tracker: Deploy Current File to Org",
        "shortTitle": "Deploy File",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "sf-metadata-tracker.retrieveCurrentFile",
        "title": "SF Metadata Tracker: Retrieve Current File from Org",
        "shortTitle": "Retrieve File",
        "icon": "$(cloud-download)"
      },
      {
        "command": "sf-metadata-tracker.authorizeOrg",
        "title": "SF Metadata Tracker: Authorize Org",
        "shortTitle": "Authorize Org",
        "icon": "$(key)"
      },
      {
        "command": "sf-metadata-tracker.switchOrg",
        "title": "SF Metadata Tracker: Switch Default Org",
        "shortTitle": "Switch Org",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "sf-metadata-tracker.toggleCoverage",
        "title": "SF Metadata Tracker: Toggle Code Coverage Highlighting",
        "shortTitle": "Toggle Coverage",
        "icon": "$(beaker)"
      },
      {
        "command": "sf-metadata-tracker.refreshCoverage",
        "title": "SF Metadata Tracker: Refresh Code Coverage",
        "shortTitle": "Refresh Coverage",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sf-metadata-tracker.showFileOrgStatus",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed && editorIsOpen"
        },
        {
          "command": "sf-metadata-tracker.refreshFileStatus",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed && editorIsOpen"
        },
        {
          "command": "sf-metadata-tracker.refreshAllFileStatus",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed"
        },
        {
          "command": "sf-metadata-tracker.deployCurrentFile",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed && editorIsOpen"
        },
        {
          "command": "sf-metadata-tracker.retrieveCurrentFile",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed && editorIsOpen"
        },
        {
          "command": "sf-metadata-tracker.authorizeOrg",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed"
        },
        {
          "command": "sf-metadata-tracker.switchOrg",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed"
        },
        {
          "command": "sf-metadata-tracker.toggleCoverage",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed && editorIsOpen && resourceExtname =~ /\\.(cls|trigger)$/"
        },
        {
          "command": "sf-metadata-tracker.refreshCoverage",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed && editorIsOpen && resourceExtname =~ /\\.(cls|trigger)$/"
        }
      ],
      "editor/context": [
        {
          "command": "sf-metadata-tracker.deployCurrentFile",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed && resourceExtname =~ /\\.(cls|trigger|page|component)$/",
          "group": "sf-metadata-tracker@1"
        }
      ],
      "explorer/context": [
        {
          "command": "sf-metadata-tracker.deployCurrentFile",
          "when": "sfMetadataTracker:project_opened && sfMetadataTracker:cli_installed && resourceExtname =~ /\\.(cls|trigger|page|component)$/",
          "group": "sf-metadata-tracker@1"
        }
      ]
    }
  }
}
